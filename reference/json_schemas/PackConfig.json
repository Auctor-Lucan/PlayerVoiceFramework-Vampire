{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlayerVoiceEvents Main Pack-Config JSON Schema",
  "description": "JSON-Schema for the main Pack-File.",
  "type": "object",
  "properties": {
    "sounds": {
      "type": "object",
      "description": "The Events to register",
      "properties": {
        "PVEAttackMelee": {
          "type": "object",
          "title": "Event",
          "description": "Played when swinging a melee weapon.",
          "properties": {
            "chance": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "The probability of the event playing a sound."
            },
            "cooldown": {
              "type": "number",
              "minimum": 0,
              "description": "The cooldown of the event after playing a file"
            },
            "canBeOverridden": {
              "type": "boolean",
              "description": "If true, other sounds can override this if playing at the same time"
            },
            "forceOverrideOthers": {
              "type": "boolean",
              "description": "If true, will ignore \"canBeOverridden\" on any playing sounds, and force-play"
            },
            "volume": {
              "type": "number",
              "default": 1.0,
              "description": "The volume modifier of the event - It is recommended to configure volume in the files themselves instead of here"
            },
            "audio": {
              "type": "array",
              "description": "A list of audio packs to evaluate in order",
              "items": {
                "type": "object",
                "properties": {
                  "condition": {
                    "type": "string",
                    "title": "Expression",
                    "description": "The condition that specifies whether to play this pack should play",
                    "examples": [
                      "PlayerHealthPercentage >= 50 && PlayerName == 'MyPlayerName'"
                    ]
                  },
                  "files": {
                    "type": "array",
                    "description": "The file paths to audio files, relative from this config's directory",
                    "items": {
                      "type": "string",
                      "title": "File Path"
                    },
                    minItems: 1
                  }
                },
                "required": [
                  "files"
                ],
              }
            }
          },
          "required": [
            "audio"
          ],
        },
        "PVEAttackBow": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when shooting a bow."
        },
        "PVEUnsheatheWeapon": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when pulling out a weapon. Note that this also gets called when hotkeying while already unsheathed."
        },
        "PVEUnsheatheSpell": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when pulling out a spell. Note that this also gets called when hotkeying while already unsheathed."
        },
        "PVESheatheWeapon": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when putting away a weapon."
        },
        "PVESheatheSpell": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when putting away a spell."
        },
        "PVEBash": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when bashing with both a shield or a weapon. Does not play when stamina is out."
        },
        "PVEDeath": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when dying."
        },
        "PVEReceivedHit": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when receiving a hit."
        },
        "PVEFinisher": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when performing a finisher."
        },
        "PVECastSpell": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when casting a spell. Only re-plays after not casting that spell for 1 second."
        },
        "PVESit": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when sitting down on a piece of furniture."
        },
        "PVEGetUp": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when getting up from a piece of furniture."
        },
        "PVESleep": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when starting/ending sleep."
        },
        "PVEJump": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when jumping."
        },
        "PVEMount": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when mounting a horse or dragon."
        },
        "PVEDismount": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when dismounting a horse or dragon."
        },
        "PVESprintIdle": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played periodically while sprinting."
        },
        "PVEPickupItem": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when receiving an item."
        },
        "PVEShout": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when shouting a word."
        },
        "PVEQuestStageCompleted": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when completing a quest stage."
        },
        "PVEChangeCell": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when Changing to another cell."
        },
        "PVEEnterMarker": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when entering the discover-radius of a location"
        },
        "PVELocationDiscover": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when discovering a location for the first time (when receiving the text-popup on screen)"
        },
        "PVECombatState": {
          "$ref": "#/properties/sounds/properties/PVEAttackMelee",
          "description": "Played when the combat state changes"
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "sounds"
  ]
}